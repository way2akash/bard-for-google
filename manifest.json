{
  "manifest_version": 3,
  "version": "1.0.5",
  "name": "Bard For Google",
  "description": "Install Bard for Google Chrome Extension and get Google Bard AI responses along with Google search results.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon64.png"
  },
  "icons": {
    "16": "icon 16.png",
    "32": "icon 32.png",
    "64": "icon64.png",
    "128": "icon 128.png"
  },
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["highlight.min.js", "markdown-it.min.js", "content.js"],

      "css": ["github.css", "content.css"]
    }
  ],
  "permissions": ["notifications", "storage", "contextMenus"],
  "web_accessible_resources": [
    {
      "resources": ["icon64.png", "gptLogo.svg", "info.png", "loader.png", "maximizeIcon.png", "minimizeIcon.png", "editingIcon.svg", "searchIcon.svg", "copyIcon.svg", "bardLogo.svg", "bardGptLogo.png", "closeIcon.png", "Roboto-Regular.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}
